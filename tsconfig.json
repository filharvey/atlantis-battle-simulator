{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src"
  ]
}